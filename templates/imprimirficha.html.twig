                <h4>Apellidos : {{ clientes.getApellidos() }} </h4>
                <h4>Teléfono Móvil: {{ clientes.getMovil() }} </h4>
                <h4>Teléfono Fijo: {{ clientes.getTelefonoFijo() }} </h4>
                <h4>DNI: {{ clientes.getDni() }} </h4>
                <h4>Email: {{ clientes.getEmail() }} </h4>
                <hr>
                <h4>Modelo Equipo: {{ fichas.getModeloEquipo() }} </h4>
                <h4>NUmero de IMEI: {{ fichas.getImei() }} </h4>
                {% if fichas.getNumeroSerie() %}<h4>Numero de Serie: {{ fichas.getNumeroSerie() }} </h4> {% endif %}
                <h4>descripcionAveria: {{ fichas.getDescripcionAveria() }} </h4>
                {% if fichas.getAccesorios() %}<h4>Accesorios: {{ fichas.getAccesorios() }} </h4> {% endif %}
                <h4>Fecha Entrada: {{ fichas.getFechaEntrada|date('d/m/Y h:m:s') }} </h4>
 #}

            {% endblock %}
        {% block javascripts %}
